@model (string path, string text, string placeholder)
<form class="col-xs-12" method="post" action="@Model.path" enctype="multipart/form-data">
    <div class="form-group">
        <input placeholder="@Model.placeholder" type="file" class="form-control" name="file" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary col-xs-12">@Model.text</button>
    </div>
</form>